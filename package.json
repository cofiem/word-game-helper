{
  "name": "word-game-helper",
  "version": "1.0.0",
  "description": "Word game helpers.",
  "private": true,
  "type": "module",
  "scripts": {
    "data:wordle": "ts-node ./src/wordle/data.ts",
    "data:wordle:build": "cp ./src/wordle/data.json ./docs/wordle/data.json",
    "data:foximax": "ts-node ./src/foximax/data.ts",
    "data:foximax:build": "cp ./src/foximax/data.json ./docs/foximax/data.json",
    "data:build": "pnpm run data:wordle:build && pnpm run data:foximax:build",
    "dev": "vite",
    "build": "tsc && vite build && pnpm run data:build",
    "preview": "vite preview",
    "test": "vitest --no-watch",
    "coverage": "vitest --coverage --no-watch"
  },
  "license": "MIT",
  "config": {
    "sources": "./src/data/scowl-2020.12.07/final",
    "wordleData": "./src/wordle/data.json",
    "foximaxData": "./src/foximax/data.json"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "3.1.3",
    "sass": "1.97.2",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vitest": "3.1.3"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.8"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "packageManager": "pnpm@10.28.0"
}
